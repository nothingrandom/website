<div class='section section--standard section--blog'>
  <div class='row'>
    <div class='col-xs-12'>
      <h2 class='section__header'>{{ title }}</h2>
      <ol class='posts posts-count' style='counter-reset: start-from {{ collections.posts | length + 1}}'>
        {% for post in collections.posts | reverse %}
            <li>
                <a href='{{ post.url }}'>
                    {{ post.data.title | default(page.url) }}
                </a>
            </li>
        {% endfor %}
    </ol>
    </div>
  </div>
</div>