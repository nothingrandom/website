---
layout: layouts/base.njk

title: Blog

tags:
  - nav

navtitle: Blog
navorder: 2

permalink: /blog/index.html
---
<div class='section section--standard section--blog'>
  <div class='row'>
    <div class='col-xs-12'>
      <div class='section__header'>
        <h2>{{ title }}</h2>
      </div>
      <div class='row center-xs'>
        <div class='col-xs-12 col-md-7 text-left'>
          <ol class='posts posts-count' style='counter-reset: start-from {{ collections.posts | length + 1}}'>
            {% for post in collections.posts | reverse %}
              <li>
                <a href='{{ post.url }}'>
                  {{ post.data.title | default(page.url) }}
                </a>
              </li>
            {% endfor %}
          </ol>
        </div>
      </div>
    </div>
  </div>
</div>