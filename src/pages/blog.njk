---
layout: layouts/base.njk

title: Blog.

menukey: blog
permalink: /blog/index.html
---

{% set filtersList = ['all', 'code', 'life'] %}

<div class='section section--standard section--blog'>
  <div class='row center-md'>
    <div class='col-xs-12 col-md-6 text-left'>
      <div class='section__header'>
        <h2>{{ title }}</h2>
      </div>
      <div class='section__filter-wrapper'>
        {% for filter in filtersList %}
          <input id='filter-{{ filter }}' value='{{ filter }}' name='filter' type='radio' class='filter__input' {{ 'checked' if loop.first }}>
          <label for='filter-{{ filter }}' class='filter__label pip posts__tag posts__tag--{{ filter }}'>{{ filter }}</label>
        {% endfor %}

        <ul class='posts filter__list posts-count text-left' style='counter-reset: start-from {{ collections.posts | length + 1}}'>
          {% for post in collections.posts | reverse %}
            <li class='section__item' data-filter='all {{ post.data.tags | join(' ') }}'>
              <a class='link--exclude' href='{{ post.url }}'>
                <div class='flex-spread'>
                  <span class='section__item__count'>{% leadingZeros loop.revindex, loop.length %}</span>
                  <span>
                    {% for tag in post.data.tags %}
                      {% if tag !== 'posts' %}
                        <span class='pip posts__tag posts__tag--{{ tag }}'>{{ tag | trim }}</span>
                      {% endif %}
                    {% endfor %}
                  </span>
                </div>
                <h3 class='section__item__header'>{{ post.data.title | default(page.url) }}</h3>
                <div class='flex-spread'>
                  <span class='section__item__detail'>{{ post.date | readableDate }}</span>
                  <span class='section__item__detail'>About {{ post.template.frontMatter.content | readingTime }}</span>
                </div>
                <p class='section__item__description'>{{ post.template.frontMatter.content | truncate(75) }}</p>
              </a>
            </li>
          {% endfor %}
        </ul>
      </div>
    </div>
  </div>
</div>