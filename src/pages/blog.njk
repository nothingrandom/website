---
layout: layouts/base.njk

title: Blog

menukey: blog
permalink: /blog/index.html
---
<div class='section section--standard section--blog'>
  <div class='row center-md'>
    <div class='col-xs-12 col-md-6 text-left'>
      <div class='section__header'>
        <h2>{{ title }}</h2>
      </div>
      <ol class='posts posts-count' style='counter-reset: start-from {{ collections.posts | length + 1}}'>
        {% for post in collections.posts | reverse %}
          <li>
            <a href='{{ post.url }}'>
              {{ post.data.title | default(page.url) }}
            </a>
          </li>
        {% endfor %}
      </ol>
    </div>
  </div>
</div>