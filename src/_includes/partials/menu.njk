{% set menuList = [
  {
    id: 'home',
    name: 'Home',
    link: '/',
    color: '#2323FD'
  },
  {
    id: 'blog',
    name: 'Blog',
    link: '/blog/',
    color: '#A0DBD4'
  },
  {
    id: 'food',
    name: 'Food',
    link: '/food/',
    color: '#FFC72A'
  },
  {
    id: 'bio',
    name: 'Bio',
    link: '/bio/',
    color: '#814CC5'
  }
] %}

<div class='menu__container'>
  <div class='container-fluid'>
    <div class='row'>
      <div class='col-xs-12'>
        <div class='menu'>
          {% if config.env === 'development' %}
            <a href='http://localhost:4000' class='link--exclude logo color'>
          {% else %}
            <a href='https://nothingrandom.com' class='link--exclude logo color'>
          {% endif %}
            <span>
              b<span class='collapse'><em style='display: none'>e</em><em style='display: none'>n</em><em style='display: none'>j</em><em style='display: none'>a</em><em style='display: none'>m</em><em style='display: none'>i</em><em style='display: none'>n</em></span>.
            </span>
          </a>
          <div class='menu__wrapper'>
            <input type='checkbox' id='menu-checkbox' class='menu__checkbox'>
            <label for='menu-checkbox' class='menu__icon'>
              <i class='fal fa-cheeseburger'></i>
              <i class='fal fa-times'></i>
            </label>
            <div class='menu__content' style='display: none'>
              <div class='menu__links'>
                <ul class='links'>
                  {% for nav in menuList %}
                    {% set isCurrent = (menukey === nav.id) %}
                    {% set isParent = nav.link != '/' and nav.link in page.url %}
                    <li class='menu__item {% if isCurrent or isParent %}menu__item--active{% endif %}' style='--hover-color: {{ nav.color }}'>
                      <a class='link--exclude' href='{{ nav.link }}'>
                        {{ nav.name }}
                      </a>
                    </li>
                  {% endfor %}
                  <li class='menu__item'>
                    {# <a class='link--exclude' href="/search" id="search-link"><i class='far fa-search'></i></a> #}
                    <label class='toggle__label' for='toggle-search'><i class='far fa-search'></i></label>
                    <input class='toggle__input--search' type='checkbox' id='toggle-search'>
                    <form action="https://www.google.co.uk/search" method="get" autocomplete="off" class="search toggle__item">
                      <input type="hidden" name="q" id="q" value="site:https://nothingrandom.com">
                      <input type="text" name="q" id="search-input"></p>
                      <ul class='search-results'>
                        {# <li><a>Search result item 1</a></li>
                        <li><a>Search result item 2</a></li>
                        <li><a>Search result item 3</a></li> #}
                      </ul>
                    </form>
                  </li>
                </ul>
                {% include 'partials/social.njk' %}
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>