{% set menuList = [
  {
    id: 'home',
    name: 'Home',
    link: '/',
    color: '#2323FD'
  },
  {
    id: 'blog',
    name: 'Blog',
    link: '/blog/',
    color: '#A0DBD4'
  },
  {
    id: 'food',
    name: 'Food',
    link: '/food/',
    color: '#FFC72A'
  },
  {
    id: 'bio',
    name: 'Bio',
    link: '/bio/',
    color: '#814CC5'
  }
] %}

<div class='menu__container'>
  <div class='container-fluid'>
    <div class='row'>
      <div class='col-xs-12'>
        <div class='menu'>
          {% if config.env === 'development' %}
            <a href='http://localhost:4000' class='link--exclude logo color'>
          {% else %}
            <a href='https://nothingrandom.com' class='link--exclude logo color'>
          {% endif %}
            <span>
              b<span class='collapse'><em style='display: none'>e</em><em style='display: none'>n</em><em style='display: none'>j</em><em style='display: none'>a</em><em style='display: none'>m</em><em style='display: none'>i</em><em style='display: none'>n</em></span>.
            </span>
          </a>
          <div class='menu__wrapper'>
            <input type='checkbox' id='menu-checkbox' class='menu__checkbox'>
            <label for='menu-checkbox' class='menu__icon'>
              <i class='fal fa-cheeseburger'></i>
              <i class='fal fa-times'></i>
            </label>
            <div class='menu-content' style='display: none'>
              <ul class='links'>
                {% for nav in menuList %}
                  {% set isCurrent = (menukey === nav.id) %}
                  {% set isParent = nav.link != '/' and nav.link in page.url %}
                  <li class='menu__item {% if isCurrent or isParent %}menu__item--active{% endif %}' style='--hover-color: {{ nav.color }}'>
                    <a class='link--exclude' href='{{ nav.link }}'>
                      {{ nav.name }}
                    </a>
                  </li>
                {% endfor %}
              </ul>
              {% include 'partials/social.njk' %}
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>